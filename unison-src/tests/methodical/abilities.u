
-- ABILITIES

structural ability A where
  woot : {A} Nat

unA = cases
  {a} -> a
  {A.woot -> k} -> handle k 10 with unA

-- This verifies that the continuation captures local variables
a1 = handle
    x = 42
    y = A.woot
    x
  with unA

structural ability B where
  zing : {B} Int

abh = cases
  {r} -> r
  {A.woot -> k} -> handle k 10 with abh
  {B.zing -> k} -> handle k (+11) with abh

ab1 = handle
    x = 32
    y = A.woot
    z = B.zing
    x + y + truncate0 z
  with abh

nh = cases
  {r} -> r

ab2 =
  handle
    handle
      x = 22
      y = A.woot
      z = B.zing
      x + y + truncate0 z
    with nh
  with abh

structural ability C where
  n : Nat
  i : Int

f = cases
  { r } -> r
  { i -> _ } -> 5
  { n -> _ } -> 7

g = cases
  { i -> _ } -> 6
  { n -> _ } -> 7
  { r } -> r

x = 'let
  j = i
  3

> (a1, ab1, ab2, (handle !x with f), (handle !x with g))

